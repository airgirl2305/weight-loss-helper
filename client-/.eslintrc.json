{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb-base"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "optimize-regex",
    "promise",
    "sonarjs",
    "no-loops"
  ],
  "rules": {
    "optimize-regex/optimize-regex": "warn",
    "sonarjs/cognitive-complexity": [
      "error",
      30
    ],
    "no-loops/no-loops": 2
  }
}
